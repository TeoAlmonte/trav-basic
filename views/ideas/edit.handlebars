<h1> edit </h1>

<div class="card card-body">
  <h3> Ideas </h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input  value="{{idea.title}}" type="text" class="form-control" name="title" required>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" required>{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-primar">Submit</button>
  </form>
</div>

