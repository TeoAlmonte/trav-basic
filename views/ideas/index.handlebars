<h1>Ideas</h1>
{{#each ideas}}
  <div>
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark" href="/ideas/edit/{{id}}"> Edit </a>
    <form method="POST" action="/ideas/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="PUT">
      <input type="submit" class="btn btn-danger" value="Delete">
    </form>
  </div>
{{else}}
<p>nonae</p>
{{/each}}
